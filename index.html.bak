    <style>
        body {
            font-family: 'Comfortaa', cursive, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #e0f2fe;
            color: #333;
            line-height: 1.6;
        }
        header {
            background-color: #87ceeb;
            color: #fff;
            padding: 40px 20px;
            text-align: center;
            border-bottom: 2px solid #add8e6;
        }
        header h1 {
            font-size: 2.5em;
            margin-bottom: 5px;
        }
        header p {
            font-size: 1.1em;
            color: #f0f8ff;
        }
        nav {
            background-color: #add8e6;
            padding: 15px;
            text-align: center;
            border-bottom: 1px solid #b0e0e6;
            position: sticky;
            top: 0;
            z-index: 100;
        }
        nav a {
            display: inline-block;
            padding: 12px 20px;
            margin: 5px 10px;
            text-decoration: none;
            color: #333;
            border-radius: 25px;
            background-color: #fff;
            transition: background-color 0.3s ease;
        }
        nav a:hover {
            background-color: #b0e0e6;
        }
        main {
            padding: 30px;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }
        .blog-posts {
            flex: 2;
            min-width: 300px;
            margin-right: 20px;
            flex-grow: 1;
        }
        .sidebar {
            flex: 1;
            min-width: 250px;
            background-color: #fff;
            padding: 25px;
            margin-bottom: 20px;
            border-radius: 10px;
            box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.1);
        }
        .post {
            background-color: #fff;
            padding: 30px;
            margin-bottom: 25px;
            border-radius: 10px;
            box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.1);
        }
        .post h2 {
            margin-bottom: 10px;
            color: #4682b4;
        }
        .post a {
            color: #4682b4;
            text-decoration: none;
        }
        .post a:hover {
            text-decoration: underline;
        }
        .sidebar h2 {
            margin-bottom: 15px;
            color: #4682b4;
        }
        .sidebar ul {
            list-style: none;
            padding: 0;
        }
        .sidebar li {
            margin-bottom: 10px;
        }
        .sidebar a {
            color: #333;
            text-decoration: none;
        }
        .sidebar a:hover {
            color: #4682b4;
        }
        footer {
            background-color: #87ceeb;
            color: #fff;
            padding: 20px;
            text-align: center;
            border-top: 2px solid #add8e6;
        }

        @media (max-width: 768px) {
            .blog-posts {
                margin-right: 0;
                width: 100%;
            }
            .sidebar {
                width: 100%;
            }
            footer {
                position: fixed;
                bottom: 0;
                left: 0;
                width: 100%;
                z-index: 100;
            }
        }
    </style>
