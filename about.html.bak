            margin-right: 20px;
        }
        .sidebar {
            flex: 1;
            min-width: 250px;
            background-color: #fff;
            padding: 25px;
            margin-bottom: 20px;
            border-radius: 10px;
            box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.1);
        }
        .post {
            background-color: #fff;
            padding: 30px;
            margin-bottom: 25px;
            border-radius: 10px;
            box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.1);
        }
        .post h2 {
            margin-bottom: 10px;
            color: #4682b4;
        }
        .post a {
            color: #4682b4;
            text-decoration: none;
        }
        .post a:hover {
            text-decoration: underline;
        }
        .sidebar h2 {
            margin-bottom: 15px;
            color: #4682b4;
        }
        .sidebar ul {
            list-style: none;
            padding: 0;
        }
        .sidebar li {
            margin-bottom: 10px;
        }
        .sidebar a {
            color: #333;
            text-decoration: none;
        }
        .sidebar a:hover {
            color: #4682b4;
        }
        footer {
            background-color: #87ceeb;
            color: #fff;
            padding: 20px;
            text-align: center;
            border-top: 2px solid #add8e6;
        }

        
        .profile-container {
            display: flex;
            align-items: center;
            margin-top: 20px;
        }

        .profile-container img {
            width: 100%;   
            height: auto;  
            max-width: 1000px;  
            margin-right: 20px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .profile-container .text {
            max-width: 600px;
        }
		
